{
  "format_version": "1.20.100",
  "minecraft:block": {
    "description": {
      "identifier": "extrabiomes:palm_wood",
      "properties": {
        "extrabiomes:direction": [
          0,
          1,
          2
        ]
      },
      "menu_category": {
        "category": "nature",
        "group": "itemGroup.name.wood"
      }
    },
    "components": {
      "minecraft:on_player_placing": {
        "event": "extrabiomes:direction",
        "target": "self"
      },
      "minecraft:material_instances": {
        "*": {
          "texture": "palm_log",
          "render_method": "opaque"
        }
      },
      "minecraft:flammable": {
        "burn_odds": 50,
        "flame_odds": 50
      },
      "minecraft:map_color": "#ff78f8",
      "minecraft:on_interact": {
        "event": "extrabiomes:stripped",
        "target": "self",
        "condition": "query.equipped_item_any_tag('slot.weapon.mainhand', 'minecraft:is_axe')"
      },
      "tag:wood": {},
      "minecraft:destructible_by_mining": {
        "seconds_to_destroy": 0.5
      }
    },
    "permutations": [
      {
        "condition": "query.block_property('extrabiomes:direction') == 0",
        "components": {
          "minecraft:rotation": [
            0,
            0,
            0
          ]
        }
      },
      {
        "condition": "query.block_property('extrabiomes:direction') == 1",
        "components": {
          "minecraft:rotation": [
            90,
            0,
            0
          ]
        }
      },
      {
        "condition": "query.block_property('extrabiomes:direction') == 2",
        "components": {
          "minecraft:rotation": [
            0,
            90,
            90
          ]
        }
      }
    ],
    "events": {
      "extrabiomes:direction": {
        "set_block_property": {
          "extrabiomes:direction": "math.floor( query.cardinal_block_face_placed_on  / 2.0 )"
        }
      },
      "extrabiomes:stripped": {
        "sequence": [
          {
            "condition": "query.block_property('extrabiomes:direction') == 0",
            "run_command": {
              "command": [
                "setblock ~ ~ ~ extrabiomes:stripped_palm_wood[\"direction\":0]"
              ]
            },
            "damage": {
              "type": "durability",
              "target": "item",
              "amount": 1
            }
          },
          {
            "condition": "query.block_property('extrabiomes:direction') == 1",
            "run_command": {
              "command": [
                "setblock ~ ~ ~ extrabiomes:stripped_palm_wood[\"direction\":1]"
              ]
            },
            "damage": {
              "type": "durability",
              "target": "item",
              "amount": 1
            }
          },
          {
            "condition": "query.block_property('extrabiomes:direction') == 2",
            "run_command": {
              "command": [
                "setblock ~ ~ ~ extrabiomes:stripped_palm_wood[\"direction\":2]"
              ]
            },
            "damage": {
              "type": "durability",
              "target": "item",
              "amount": 1
            }
          }
        ]
      }
    }
  }
}
