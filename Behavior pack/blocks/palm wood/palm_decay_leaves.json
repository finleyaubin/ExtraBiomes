{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "extrabiomes:palm_decay_leaves"
		},
		"components": {
			"minecraft:creative_category": {
                "category": "null"
            },
			"minecraft:destroy_time": 0.3,
			"minecraft:flammable": {
				"burn_odds": 50,
				"flame_odds": 50
			},
			"minecraft:map_color": "#ff78f8",
			"minecraft:unit_cube": {},
			"minecraft:material_instances": {
				"*": {
					"texture": "palm_leaves",
					"render_method": "blend"
				}
			},
			"minecraft:block_light_absorption": 0,
			"minecraft:loot": "loot_tables/empty.json",
			"minecraft:ticking": {
				"looping": true,
				"range": [15, 100],
				"on_tick": {
					"event": "extrabiomes:random_loot",
					"target": "self"
				}
			},
			"minecraft:on_player_destroyed": {
				"event": "extrabiomes:spawn_loot",
				"target": "self"
			},
			"tag:leaves": {}
		},
		"events": {
			"extrabiomes:spawn_loot": {
				"sequence": [
					{
						"condition": "query.get_equipped_item_name('main_hand') == 'shears'",
						"damage": {
							"amount": 1,
							"type": "durability",
							"target": "item"
						},
						"spawn_loot": {
							"table": "loot_tables/blocks/palm wood/palm_leaves.json"
						}
					},
					{
						"condition": "query.get_equipped_item_name('main_hand') != 'shears'",
						"trigger": {
							"event": "extrabiomes:random_loot",
							"target": "self"
						}
					}
				]
			},
			"extrabiomes:random_loot": {
				"randomize": [
					{
						"weight": 25,
						"spawn_loot": {
							"table": "loot_tables/blocks/palm wood/palm_leaves2.json"
						},
						"set_block": {
							"block_type": "minecraft:air"
						}
					},
					{
						"weight": 10,
						"spawn_loot": {
							"table": "loot_tables/blocks/palm wood/palm_leaves3.json"
						},
						"set_block": {
							"block_type": "minecraft:air"
						}
					},
					{
						"weight": 15,
						"spawn_loot": {
							"table": "loot_tables/blocks/palm wood/palm_leaves1.json"
						},
						"set_block": {
							"block_type": "minecraft:air"
						}
					},
					{
						"weight": 50,
						"spawn_loot": {
							"table": "loot_tables/empty.json"
						},
						"set_block": {
							"block_type": "minecraft:air"
						}
					}
				]
			}
		}
	}
}