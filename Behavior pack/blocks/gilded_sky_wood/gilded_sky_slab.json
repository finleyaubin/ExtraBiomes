{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "extrabiomes:gilded_sky_slab",
			"properties": {
				"extrabiomes:slab": [
					0,
					1,
					2
				]
			}
		},
		"components": {
			"minecraft:creative_category": {
                "group": "itemGroup.name.slab",
                "category": "construction"
            },
			"minecraft:destroy_time": 0.5,
			"minecraft:on_player_placing": {
				"event": "extrabiomes:up",
				"target": "self",
				"condition": "query.target_x_rotation <= 0"
			},
			"minecraft:map_color": "#ff78f8"
		},
		"permutations": [
			{
				"condition": "query.block_property('extrabiomes:slab') == 0",
				"components": {
					"minecraft:geometry": "geometry.slab_down",
					"minecraft:block_light_absorption": 0,
					"minecraft:on_interact": {
						"event": "extrabiomes:block",
						"target": "self",
						"condition": "query.get_equipped_item_name('main_hand') == 'gilded_sky_slab' && query.block_face == 1"
					},
					"minecraft:entity_collision": {
						"origin": [
							-8,
							0,
							-8
						],
						"size": [
							16,
							8,
							16
						]
					},
					"minecraft:pick_collision": {
						"origin": [
							-8,
							0,
							-8
						],
						"size": [
							16,
							8,
							16
						]
					},
					"minecraft:material_instances": {
						"*": {
							"texture": "gilded_sky_planks",
							"render_method": "opaque"
						}
					}
				}
			},
			{
				"condition": "query.block_property('extrabiomes:slab') == 1",
				"components": {
					"minecraft:geometry": "geometry.slab_up",
					"minecraft:block_light_absorption": 0,
					"minecraft:on_interact": {
						"event": "extrabiomes:block",
						"target": "self",
						"condition": "query.get_equipped_item_name('main_hand') == 'gilded_sky_slab' && query.block_face == 0"
					},
					"minecraft:entity_collision": {
						"origin": [
							-8,
							8,
							-8
						],
						"size": [
							16,
							8,
							16
						]
					},
					"minecraft:pick_collision": {
						"origin": [
							-8,
							8,
							-8
						],
						"size": [
							16,
							8,
							16
						]
					},
					"minecraft:material_instances": {
						"*": {
							"texture": "gilded_sky_planks",
							"render_method": "opaque"
						}
					}
				}
			},
			{
				"condition": "query.block_property('extrabiomes:slab') == 2",
				"components": {
					"minecraft:unit_cube": {},
					"minecraft:loot": "loot_tables/blocks/gilded_sky wood/gilded_sky_slab.json",
					"minecraft:block_light_absorption": 15,
					"minecraft:material_instances": {
						"*": {
							"texture": "gilded_sky_planks",
							"render_method": "opaque"
						}
					}
				}
			}
		],
		"events": {
			"extrabiomes:block": {
				"set_block_property": {
					"extrabiomes:slab": 2
				},
				"decrement_stack": {}
			},
			"extrabiomes:up": {
				"set_block_property": {
					"extrabiomes:slab": 1
				}
			}
		}
	}
}