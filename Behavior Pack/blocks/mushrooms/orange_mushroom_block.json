{
	"format_version": "1.17.100",
	"minecraft:block": {
		"description": {
			"identifier": "extrabiomes:orange_mushroom_block",
			"is_experimental": true
		},
		"components": {
			"minecraft:material_instances": {
				"*": {
					"texture": "orange_mushroom_block",
					"render_method": "opaque"
				}
			},
			"minecraft:unit_cube": {},
			"minecraft:creative_category": {
				"group": "itemGroup.name.mushroom",
				"category": "nature"
			},
			"minecraft:pick_collision": {
				"origin": [
					-8,
					0,
					-8
				],
				"size": [
					16,
					16,
					16
				]
			},
			"minecraft:entity_collision": {
				"origin": [
					-8,
					0,
					-8
				],
				"size": [
					16,
					16,
					16
				]
			},
			"minecraft:on_player_destroyed": {
				"event": "extrabiomes:spawn_loot",
				"target": "self"
			},
			"minecraft:loot": "loot_tables/empty.json",
			"minecraft:map_color": "#0000FF"
		},
		"events": {
			"extrabiomes:spawn_loot": {
				"sequence": [
					{
						"condition": "query.get_equipped_item_name('main_hand') == 'shears'",
						"damage": {
							"amount": 1,
							"type": "durability",
							"target": "item"
						},
						"spawn_loot": {
							"table": "loot_tables/blocks/mushroom/orange_mushroom_block.json"
						}
					},
					{
						"condition": "query.get_equipped_item_name('main_hand') != 'shears'",
						"trigger": {
							"event": "extrabiomes:random_loot",
							"target": "self"
						}
					}
				]
			},
			"extrabiomes:random_loot": {
				"randomize": [
					{
						"weight": 15,
						"spawn_loot": {
							"table": "loot_tables/blocks/mushroom/orange_mushroom.json"
						}
					},
					{
						"weight": 50,
						"spawn_loot": {
							"table": "loot_tables/empty.json"
						}
					}
				]
			}
		}
	}
}